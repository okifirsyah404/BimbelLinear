<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.view.change_password.ChangePasswordFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtlama"
            android:textSize="20sp"
            android:textStyle="normal"
            android:text="Kata Sandi Lama"
            android:fontFamily="@font/mulish_regular"
            android:textColor="@color/neutral_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/passlama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/neutral_0"
                android:fontFamily="@font/mulish_regular"
                android:background="@drawable/custom_edittext"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txtbaru"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textStyle="normal"
            android:text="Kata Sandi Baru"
            android:textColor="@color/neutral_20"
            android:fontFamily="@font/mulish_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtbaru">
            <EditText
                android:id="@+id/passbaru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/neutral_0"
                android:fontFamily="@font/mulish_regular"
                android:background="@drawable/custom_edittext"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txtulang"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textStyle="normal"
            android:text="Ulangi Kata Sandi Baru"
            android:textColor="@color/neutral_20"
            android:fontFamily="@font/mulish_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txtbaru">
            <EditText
                android:id="@+id/ulangpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/neutral_0"
                android:fontFamily="@font/mulish_regular"
                android:background="@drawable/custom_edittext"/>

        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnubah"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:text="Ubah Password"
            style="@style/FilledButtonTheme"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>