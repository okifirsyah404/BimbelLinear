<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.view.attendance_detail.AttendanceDetailFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtmapel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_40"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:fontFamily="@font/mulish_extra_bold"
            tools:text="Matematika"/>


        <TextView
            android:id="@+id/txtkelompok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/neutral_0"
            android:textSize="18sp"
            android:fontFamily="@font/mulish_bold"
            tools:text="Kelompok Bimbel"/>

        <TextView
            android:id="@+id/kelompok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/neutral_20"
            android:textSize="16sp"
            android:fontFamily="@font/mulish_regular"
            tools:text="Kelompok satu"/>

        <TextView
            android:id="@+id/txtruangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/neutral_0"
            android:textSize="18sp"
            android:fontFamily="@font/mulish_bold"
            tools:text="Ruangan"/>

        <TextView
            android:id="@+id/ruangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/neutral_20"
            android:textSize="16sp"
            android:fontFamily="@font/mulish_regular"
            tools:text="Ruang A1"/>

        <TextView
            android:id="@+id/txttentor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/neutral_0"
            android:textSize="18sp"
            android:fontFamily="@font/mulish_bold"
            tools:text="Tentor"/>

        <TextView
            android:id="@+id/tentor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/neutral_20"
            android:textSize="16sp"
            android:fontFamily="@font/mulish_regular"
            tools:text="Nasrudin, S.Pd,"/>

        <TextView
            android:id="@+id/txtwaktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/neutral_0"
            android:textSize="18sp"
            android:fontFamily="@font/mulish_bold"
            tools:text="Waktu Bimbel"/>

        <TextView
            android:id="@+id/waktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/neutral_20"
            android:textSize="16sp"
            android:fontFamily="@font/mulish_regular"
            tools:text="10:30"/>

        <TextView
            android:id="@+id/txtstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/neutral_0"
            android:textSize="18sp"
            android:fontFamily="@font/mulish_bold"
            tools:text="Status Kehadiran"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/neutral_20"
            android:textSize="16sp"
            android:fontFamily="@font/mulish_regular"
            tools:text="Hadir"/>

        <Button
            android:id="@+id/btnabsensi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Presensi Kehadiran"
            style="@style/FilledButtonTheme"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>



</LinearLayout>