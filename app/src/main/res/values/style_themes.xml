<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <attr name="viewBackgroundColor" format="reference" />
    <attr name="splashForegroundColor" format="reference" />
    <attr name="splashBackgroundColor" format="reference" />
    <attr name="toolbarColor" format="reference" />
    <attr name="lineDividerColor" format="reference" />
    <attr name="viewDividerColor" format="reference" />
    <attr name="iconColor" format="reference" />
    <attr name="cardColor" format="reference" />
    <attr name="flatTextButtonColor" format="reference" />
    <attr name="outlinedButtonStrokeColor" format="reference" />
    <attr name="boxBorderTextFieldColor" format="reference" />
    <attr name="mainTextColor" format="reference" />
    <attr name="drawableContainerColor" format="reference" />
    <attr name="disableFilledButtonColor" format="reference" />
    <attr name="disableFilledButtonTextColor" format="reference" />

    <!--    Typography Theme-->

    <style name="LabelLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
    </style>

    <style name="LabelMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
    </style>

    <style name="LabelSmall">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
    </style>

    <style name="BodyMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
    </style>

    <style name="BodySmall">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
    </style>

    <!--   Button Theme  -->

    <style name="FilledButtonTheme" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/flatTextButtonColor</item>
        <item name="android:backgroundTint">@color/primary_40</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="FilledButtonTheme.Disable" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/disableFilledButtonTextColor</item>
        <item name="android:backgroundTint">?attr/disableFilledButtonColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OutlinedButtonTheme" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_40</item>
        <item name="strokeColor">?attr/outlinedButtonStrokeColor</item>
        <item name="android:strokeWidth">10</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--  Edit Text Theme  -->
    <style name="EditTextMainTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="cursorColor">@color/primary_40</item>
        <item name="boxStrokeColor">@drawable/box_text_input_border</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>


</resources>